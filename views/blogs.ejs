<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <title><%= blog.title %></title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, #ff5f6d, #ffc371, rgb(235, 91, 91));
            color: #fff;
        }

        .blog-container {
            display: flex;
            align-items: flex-start;
            justify-content: space-between;
            max-width: 95%;
            background-color: rgb(0, 0, 0);
            margin: 50px auto 40px;
            padding: 70px 40px;
            border-radius: 10px;
            gap: 30px;
            flex-wrap: wrap;
        }

        .content, .image-container {
            flex: 1 1 45%;
            min-width: 300px;
        }

        .content h1 {
            font-size: 48px;
            font-weight: bold;
            margin-bottom: 20px;
            font-family: futura;
            color: transparent;
            background: linear-gradient(135deg, #ff5f6d,#ffc371, rgb(235, 91, 91));
            -webkit-background-clip: text;
        }

        .content p {
            font-size: 18px;
            line-height: 1.6;
            color: #ddd;
        }

        .image-container {
            position: relative;
            text-align: center;
        }

        .image-container img {
            width: 100%;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.4);
        }

        #button1 {
            padding: 8px 16px;
            border-radius: 10px;
            border: none;
            color: #000;
            margin-top: 15px;
            font-family: "Poppins Medium";
            background: linear-gradient(135deg, #ff5f6d,#ffc371, rgb(235, 91, 91));
            cursor: pointer;
        }

        .WhoisUser {
            margin-top: 10px;
            display: flex;
            align-items: center;
            gap: 10px;
            height: 40px;
            width: fit-content;
            margin-left: auto;
            margin-right: 0;
            font-family: 'Brondb Fuve', sans-serif;
        }

        .img {
            height: 100%;
            width: 40px;
            background-color: blue;
            border-radius: 50%;
            overflow: hidden;
        }

        .img img {
            height: 100%;
            width: 100%;
            object-fit: cover;
        }

        .profile-name {
            font-family: Teachers;
        }

        .comment-box {
            width: 100%;
            max-width: 500px;
            border-radius: 5px;
            padding: 10px;
            border: 2px solid #fe7070;
            background-color: #ff6f6f;
            margin-top: 20px;
        }

        #button2 {
            border: none;
            border-radius: 10px;
            padding: 6px 12px;
            background-color: white;
            font-weight: bold;
        }

        .comment-box h3 {
            font-size: 18px;
            margin-bottom: 5px;
            text-align: center;
            color: black;
        }

        .comment-form {
            display: flex;
            flex-direction: column;
        }

        .comment-input {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            border: none;
            height: 80px;
            border-radius: 8px;
        }

        #post-comment-btn {
            background: none;
            border: 1px solid #000;
            padding: 5px;
            cursor: pointer;
            width: 100px;
            margin: auto;
            display: block;
        }

        .comment-dropdown {
            width: 100%;
            max-width: 400px;
            color: white;
            font-family: "Poppins Medium";
            text-align: center;
            margin-top: 20px;
        }

        .comment-dropdown button {
            margin-top: 10px;
            border: 2px solid red;
            background-color: #fe7070;
            border-radius: 20px;
            padding: 5px 10px;
            cursor: pointer;
            color: #fff;
        }

        .comment-list {
            display: none;
            border: 1px solid #000;
            gap: 10px;
            padding: 10px;
            max-height: 200px;
            overflow-y: auto;
            background: rgba(0, 0, 0, 0.2);
        }

        .comment-item {
            display: flex;
            align-items: center;
            gap: 10px;
            justify-content: flex-start;
            background-color: rgb(255, 116, 116);
            padding: 5px;
            font-size: 8px;
            border-bottom: 1px solid #d50f0f;
        }

        .comment-item p {
            font-size: 10px;
            color: #000;
        }

        .comment-img {
            width: 30px;
            height: 30px;
            border-radius: 50%;
        }

        .comment-name {
            font-weight: bold;
            font-size: 10px;
            color: black;
            font-family: Teachers;
            white-space: nowrap;
        }

        h3 {
            font-family: futura;
        }

        /* Responsive Adjustments */
        @media (max-width: 992px) {
            .content h1 {
                font-size: 36px;
            }
            .content p {
                font-size: 16px;
            }
        }

        @media (max-width: 768px) {
            .blog-container {
                flex-direction: column;
                padding: 40px 20px;
            }
            .content, .image-container {
                max-width: 100%;
            }
            .WhoisUser {
                justify-content: center;
                margin-left: 0;
            }
            .content h1 {
                font-size: 28px;
            }
            .comment-box, .comment-dropdown {
                margin: 0 auto;
            }
        }

        @media (max-width: 480px) {
            .content h1 {
                font-size: 24px;
            }
            .comment-item {
                flex-direction: column;
                align-items: flex-start;
            }
            .comment-name {
                font-size: 9px;
            }
            .comment-item p {
                font-size: 9px;
            }
        }
    </style>
</head>
<body>
    <%- include('partials/nav') %>
    <div class="blog-container">
        <div class="content">
            <h1><%= blog.title %></h1>
            <p><%= blog.body %></p>

            <% if (locals.user) { %>
            <div class="comment-box">
                <h3>Leave a Comment!</h3>
                <form class="comment-form" action="/blog/comment/<%= blog._id %>" method="post">
                    <textarea name="content" class="comment-input" placeholder="Write your comment..." required></textarea>
                    <button id="button2" type="submit" class="submit-btn">Submit</button>
                </form>
            </div>
            <% } %>

            <div class="comment-dropdown">
                <button id="toggle-comments">View Comments (<%= comment.length %>) â–¼</button>
                <div class="comment-list">
                    <% comment.forEach(element => { %>
                    <div class="comment-item">
                        <img class="comment-img" src="/image/userImage.avif" alt="User">
                        <span class="comment-name"><%= element.createdBy.fullName %></span>
                        <p class="comment-text"><%= element.content %></p>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>

        <div class="image-container">
            <img src="<%=blog.converImageIUrl %>" alt="<%= blog.title %>">
            <div class="WhoisUser">
                <div class="img"><img class="profile-img" src="/image/userImage.avif" alt="Profile Image"> </div>
                <span class="profile-name"><%= blog.createdBy.fullName %></span>
            </div>
            <a href="/"><button id="button1">Back To Blogs</button></a>
        </div>
    </div>

    <%- include('partials/footer') %>
    <%- include('partials/script') %>
</body>
</html>
